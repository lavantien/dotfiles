{
    "$schema": "https://opencode.ai/config.json",
    "mcp": {
        "context7": {
            "type": "remote",
            "url": "https://mcp.context7.com/mcp",
            "headers": {
                "CONTEXT7_API_KEY": "${CONTEXT7_API_KEY}"
            },
            "enabled": true
        },
        "playwright": {
            "type": "local",
            "command": [
                "npx",
                "-y",
                "@playwright/mcp"
            ],
            "timeout": 30000
        },
        "repomix": {
            "type": "local",
            "command": [
                "npx",
                "-y",
                "repomix",
                "--mcp"
            ],
            "timeout": 30000
        },
        "serena": {
            "type": "local",
            "command": [
                "uvx",
                "--from",
                "git+https://github.com/oraios/serena",
                "serena-mcp-server"
            ],
            "timeout": 60000
        }
    }
}
